<section>
    {{#with room}}
    <h1 class="item">{{name}} - Details</h1>
    <div class="item padded">
        <main class="layout right large">
            <div class="col">
                <img src="{{imgURL}}" alt="">
            </div>
            <div class="content pad-med">
                <p>City: {{city}}</p>
                <p>{{description}}</p>
                <div class="align-center">
                    <p><strong>Price per night: {{price}}â‚¬</strong></p>
                </div>

                <ul class="catalog">
                    {{#each facilities}}
                    <li>{{label}} <img class="facility-icon" src="{{iconUrl}}"></li>
                    {{/each}}
                </ul>

                {{#if isOwner}}
                <a class="action cta" href="/facility/{{_id}}/decorateRoom">Edit Facilities</a>
                {{/if}}
            </div>
        </main>
    </div>
    {{/with}}
</section>